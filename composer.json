{
  "name": "doncamillo1/laraconfig",
  "description": "Per-user settings repository system for Laravel",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "ConCamillo1",
      "email": "doncamillo1@web.de"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/database": "^10.0.0",
    "illuminate/support": "^10.0.0",
    "illuminate/collections": "^10.0.0",
    "illuminate/config": "^10.0.0",
    "illuminate/cache": "^10.0.0",
    "symfony/console": "^6.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.5.0",
    "orchestra/testbench": "^7.4.0",
    "phpunit/phpunit": "^9.5.4"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "autoload": {
    "psr-4": {
      "DonCamillo11\\Laraconfig\\": "src"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "DonCamillo11\\Laraconfig\\LaraconfigServiceProvider"
      ],
      "aliases": {
        "Setting": "DonCamillo11\\Laraconfig\\Facades\\Setting"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  }
}
